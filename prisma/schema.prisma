generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum UserType {
  ADMIN
  CHOFER
  EMPLEADO
}
model User {
  id         String   @id
  ci         String   @unique
  email      String   @unique
  name       String
  lastName   String
  secondLastName String?
  type       UserType @default(EMPLEADO)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  vehiculos Vehiculo[]
}

model Vehiculo {
  id            String   @id @default(uuid())
  idUser        String
  placa         String   @unique
  modelo        String
  marca         String
  anio          Int
  capacidad     Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [idUser], references: [id])
}

